<% layout('layouts/boilerplate')%>

<form method="post" action="/customers">
	<div class="page-header no-gutters has-tab">
		<div class="d-md-flex m-b-15 align-items-center justify-content-between">
			<div class="media align-items-center m-b-15">
				<h2>إنشاء عميل جديد</h2>
			</div>
		</div>
		<ul class="nav nav-tabs">
			<li class="nav-item">
				<a class="nav-link active" data-toggle="tab" href="#customer-edit-basic">معلومات أساسية</a>
			</li>
		</ul>
	</div>
	<div class="tab-content m-t-15">
		<div class="tab-pane fade show active" id="customer-edit-basic">
			<div class="card">
				<div class="card-body">
					<div class="form-group">
						<label for="name">الاسم</label>
						<input type="text" id="name" name="name" placeholder="الاسم" class="form-control" required />
					</div>
					<div class="form-group">
						<label for="email">البريد الإلكتروني</label>
						<input type="email" id="email" name="email" placeholder="البريد الإلكتروني" class="form-control" required />
					</div>
					<div class="form-group">
						<label for="phone">رقم الهاتف</label>
						<input type="tel" id="phone" name="phone" placeholder="رقم الهاتف" class="form-control" required />
					</div>
					<div class="text-right">
						<button class="btn btn-primary">إضافة العميل</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>
