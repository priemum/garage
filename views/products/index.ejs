<% layout('layouts/boilerplate')%>

<div class="page-header">
	<h2 class="header-title">قائمة المنتجات</h2>
	<div class="header-sub-title">
		<nav class="breadcrumb breadcrumb-dash">
			<a href="/monthly_profit_cost" class="breadcrumb-item"
				><i class="anticon anticon-home m-r-5"></i>الصفحة الرئيسية</a>
			<a class="breadcrumb-item" href="/products">الإدارة</a>
			<a class="breadcrumb-item" href="/products">المنتجات</a>
			<span class="breadcrumb-item active">قائمة المنتجات</span>
		</nav>
	</div>
</div>
<div class="card">
	<div class="card-body">
		<div class="row m-b-30">
			<div class="col-lg-8">
				<div class="d-md-flex">
					<div class="m-b-10 m-r-15"></div>
					<div class="m-b-10"></div>
				</div>
			</div>
			<div class="col-lg-4 text-right">
				<a class="btn btn-primary" href="/products/new">
					<i class="anticon anticon-plus-circle m-r-5"></i>
					<span>إضافة عنصر</span>
				</a>
			</div>
		</div>
		<div class="table-responsive">
			<table class="table table-hover e-commerce-table" id="data-table">
				<thead>
					<tr>
						<th>الاسم</th>
						<th>رقم المنتج</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% products.forEach(function(product) { %>
					<tr>
						<td><%= product.name %></td>
						<td><%= product.universal_product_code %></td>
						<td class="text-right">
							<form
								id="<%= product.id %>"
								action="/products/<%= product.id %>?_method=DELETE"
								method="POST"
								class="d-inline"
								onsubmit="return confirm('هل أنت متأكد أنك تريد حذف هذا العنصر؟')">
								<button
									type="button"
									class="btn btn-icon btn-danger btn-hover btn-sm btn-rounded"
									data-toggle="modal"
									data-target="#exampleModalCenter"
									onclick="openDeleteModal(event,'product','<%= product.id %>')">
									<i class="anticon anticon-delete"></i>
								</button>
							</form>
						</td>
					</tr>
					<% }); %>
				</tbody>
			</table>
			<%- include('../partials/deletePopUp.ejs')%>
		</div>
	</div>
</div>