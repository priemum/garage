<% layout('layouts/boilerplate') %>

<div class="container">
  <h1>Monthly Profit and Cost</h1>
  <% for(var i=0; i < monthly_profit_cost.length; i++) { %>
    <div class="card my-3">
      <div class="card-body">
        <h5 class="card-title">
          <%= monthly_profit_cost[i].month %>, <%= monthly_profit_cost[i].year %>
        </h5>

        <div class="row mt-3">
          <div class="col-md-4">
            <h6 class="mb-0">Revenue</h6>
            <p class="text-success">$<%= monthly_profit_cost[i].revenue %></p>
          </div>

          <div class="col-md-4">
            <h6 class="mb-0">Cost</h6>
            <p class="text-danger">$<%= monthly_profit_cost[i].cost %></p>
          </div>

          <div class="col-md-4">
            <h6 class="mb-0">Profit</h6>
            <p class="text-primary">$<%= monthly_profit_cost[i].profit %></p>
          </div>
        </div>
      </div>
    </div>
  <% } %>
</div>
