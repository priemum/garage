<% layout('layouts/boilerplate')%> 
<% for(var i=0; i < products.length; i++) {%>
<p>Name: <%= products[i].name %></p>
<p>UPC: <%= products[i].universal_product_code %></p>
<form method="post" action="/products/<%= products[i].id %>?_method=DELETE" onsubmit="return confirm('Are you sure you want to delete this product?')">
    <button type="submit" class="btn btn-danger">Delete</button>
</form>
<%}%>

<form method="post" action="/products">
	<label for="name">Name</label>
	<input type="text" id="name" name="name" placeholder="name" />
	<br />
	<label for="upc">upc</label>
	<input type="text" id="upc" name="upc" placeholder="upc" />
	<br />
	<br />
	<button>Submit</button>
</form>
