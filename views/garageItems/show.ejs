<% layout('layouts/boilerplate')%> <% var category = categories.find(c => c.id
=== garageItem.category_id); var product = products.find(p => p.id ===
garageItem.product_id); %>
<div class="page-header no-gutters has-tab">
	<div class="d-md-flex m-b-15 align-items-center justify-content-between">
		<div class="media align-items-center m-b-15">
			<div
				class="avatar avatar-image rounded"
				style="height: 70px; width: 70px">
				<img src="/assets/images/others/product-icon.jpg" alt="" />
			</div>
			<div class="m-l-15">
				<h4 class="m-b-0"><%=product.name%></h4>
				<p class="text-muted m-b-0">الكود: <%=garageItem.id%></p>
			</div>
		</div>
		<div class="m-b-15"></div>
	</div>
	<ul class="nav nav-tabs">
		<li class="nav-item">
			<a class="nav-link active" data-toggle="tab" href="#product-overview"
				>نظرة عامة</a
			>
		</li>
	</ul>
</div>
<div class="container-fluid">
	<div class="tab-content m-t-15">
		<div class="tab-pane fade show active" id="product-overview">
			<div class="row">
				<div class="col-md-6">
					<div class="card">
						<div class="card-body">
							<div class="media align-items-center">
								<i
									class="font-size-40 text-primary anticon anticon-shopping-cart"></i>
								<div class="m-l-15">
									<p class="m-b-0 text-muted">المبيعات</p>
									<h3 class="m-b-0 ls-1">
										<% if (sellOrders[0] && sellOrders[0].total_sell_orders !==
										undefined) { %> <%= sellOrders[0].total_sell_orders %> <% }
										else { %> 0 <% } %>
									</h3>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="col-md-6">
					<div class="card">
						<div class="card-body">
							<div class="media align-items-center">
								<i class="font-size-40 text-primary anticon anticon-stock"></i>
								<div class="m-l-15">
									<p class="m-b-0 text-muted">المخزون المتاح</p>
									<h3 class="m-b-0 ls-1"><%=garageItem.quantity_on_hand%></h3>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="card">
				<div class="card-body">
					<h4 class="card-title">معلومات أساسية</h4>
					<div class="table-responsive">
						<table class="product-info-table m-t-20">
							<tbody>
								<tr>
									<td>السعر:</td>
									<td class="text-dark font-weight-semibold">
										<%=garageItem.retail_price%>$
									</td>
								</tr>
								<tr>
									<td>الفئة:</td>
									<td><%=category.name%></td>
								</tr>
								<tr>
									<td>التكلفة:</td>
									<td><%=garageItem.product_cost%>$</td>
								</tr>
								<tr>
									<td>الحالة:</td>
									<td>
										<% if (garageItem.quantity_on_hand > 0) { %>
										<span class="badge badge-pill badge-cyan">متوفر</span>
										<% } else { %>
										<span class="badge badge-pill badge-danger"
											>غير متوفر</span
										>
										<% } %>
									</td>
								</tr>
							</tbody>
						</table>
					</div>
				</div>
			</div>
			<div class="card">
				<div class="card-header">
					<h4 class="card-title">وصف المنتج</h4>
				</div>
				<div class="card-body"><%=garageItem.description%></div>
			</div>
		</div>
	</div>
</div>
