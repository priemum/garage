<% layout('layouts/boilerplate')%> 
<% for(var i=0; i < customers.length; i++) {%>
<p>Name: <%= customers[i].name %></p>
<p>Email: <%= customers[i].email %></p>
<p>Phone: <%= customers[i].phone %></p>
<p>Total Orders: <%= customers[i].total_orders %></p>
<form method="post" action="/customers/<%= customers[i].id %>?_method=DELETE" onsubmit="return confirm('Are you sure you want to delete this customer?')">
    <button type="submit" class="btn btn-danger">Delete</button>
</form>
<%}%>
<form method="post" action="/customers">
	<label for="name">Name</label>
	<input type="text" id="name" name="name" placeholder="name" />
	<br />
	<label for="email">Email</label>
	<input type="email" id="email" name="email" placeholder="email" />
	<br />
	<label for="phone">Phone</label>
	<input type="text" id="phone" name="phone" placeholder="phone" />
	<br />
	<button>Submit</button>
</form>
